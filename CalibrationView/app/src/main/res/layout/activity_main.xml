<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <com.mrr.view.ScaleView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="30dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="0dp"
        app:cursorLoc="bottom"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressColor="@color/purple_200"
        app:scaleDirect="horizontal" />


    <com.mrr.view.ScaleView
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="2dp"
        app:cursorLoc="top"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:progressColor="@color/purple_200"
        app:scaleDirect="horizontal" />

    <com.mrr.view.ScaleView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="5dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="3dp"
        app:cursorLoc="inside"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:progressColor="@color/purple_200"
        app:scaleNodeWidth="0.2"
        app:scaleStyle="circle"
        app:scaleWidth="0.1"
        app:totalProgress="120"
        app:unitScale="10" />

    <com.mrr.view.ScaleView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="30dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="3dp"
        app:cursorLoc="outside"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:progressColor="@color/purple_200"
        app:scaleNodeWidth="0.2"
        app:scaleStyle="circle"
        app:scaleWidth="0.1"
        app:totalProgress="120"
        app:unitScale="10" />

    <com.mrr.view.ScaleView
        android:layout_width="70dp"
        android:layout_height="420dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="0dp"
        app:cursorLoc="right"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressColor="@color/purple_200"
        app:scaleDirect="vertical"
        app:scaleNodeWidth="0.7" />


    <com.mrr.view.ScaleView
        android:layout_width="70dp"
        android:layout_height="420dp"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:cursorDrawable="@drawable/brightness"
        app:cursorGap="0dp"
        app:cursorLoc="left"
        app:cursorWidth="10dp"
        app:defaultColor="@color/dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:progressColor="@color/purple_200"
        app:scaleDirect="vertical"
        app:scaleNodeWidth="0.7" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>