<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <com.mrr.view.ScaleView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:padding="5dp"
        app:calibrationDirect="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.mrr.view.ScaleView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:padding="5dp"
        app:calibrationDirect="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.mrr.view.ScaleView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="5dp"
        app:calibrationNodeWidth="0.2"
        app:calibrationStyle="circle"
        app:calibrationWidth="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:totalProgress="120"
        app:unitCalibration="10" />


    <com.mrr.view.ScaleView
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:background="@color/yellow"
        android:padding="5dp"
        app:calibrationDirect="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.mrr.view.ScaleView
        android:layout_width="40dp"
        android:layout_height="400dp"
        android:padding="5dp"
        app:calibrationDirect="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>